#!/usr/bin/env ruby
# frozen-string-literal: true

require 'abbrev'
require 'digest'
require 'json'
require 'open-uri'
require 'uri'
require 'yaml'

Bundler.require :default

def require_libs(libs) = libs.each { require_relative "#{__dir__}/lib/#{_1}" }

require_libs %w[
  version
  options patches
  hook_registry configurable modules cli_registry
  qbot

  hooks cli_commands

  db
  i18n
  config_helpers
  helpers breaking_wrap
  xsampa tpdict sitelenpona
  tio xkcd
]

qbot = QBot.instance
qbot.run
